<Page x:Class="TransportCompany1.PageRequestsList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TransportCompany1"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="1200"
      Background="#fff"
      Title="PageRequestsList">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Image 
                Height="100"
                Width="100"
                HorizontalAlignment="Left" 
                VerticalAlignment="Center"
                Source="/Мастер пол.png" 
                Margin="10,0,0,0"
            />
            <TextBlock
            HorizontalAlignment="Center"
            FontSize="36"
            Text="Список заявок партнеров" 
            Margin="0,36,0,75"
        />
        </Grid>
        <ListView x:Name="PartnersListView"
              BorderThickness="0"
              HorizontalContentAlignment="Stretch"
              Grid.Row="1" SelectionChanged="PartnersListView_SelectionChanged"
    >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel 
                        Background="#F4E8D3"
                        Height="auto"
                        Width="auto"
                        Orientation="Vertical"
                            Grid.Column="0"
                    >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock FontSize="16" Padding="5">
                                <Run Text="{Binding PartnerType.Name}"/>
                                <Run Text=" | "/>
                                <Run Text="{Binding Name}"/>
                                </TextBlock>
                                <TextBlock FontSize="16" 
                                       Margin="0,0,220,0"
                                       HorizontalAlignment="Right"
                                       Text="{Binding TotalPrice}"
                            >
                                </TextBlock>
                            </Grid>
                            <TextBlock FontSize="14" 
                                   Margin="3"
                                   HorizontalAlignment="Left"
                        >
                            <Run Text="{Binding Address}"/>

                            </TextBlock>
                            <TextBlock FontSize="14"
                                   Margin="3"
                                   HorizontalAlignment="Left"
                        >
                            <Run Text="+7"/>
                            <Run Text="{Binding Phone}"/>
                            </TextBlock>
                            <TextBlock FontSize="14"
                                   Margin="3"
                                   HorizontalAlignment="Left"
                        >
                            <Run Text="Рейтинг:"/>
                            <Run Text="{Binding Rating}"/>
                            </TextBlock>
                        </StackPanel>
                        <Button
                            x:Name="SaleHistoryButton"
                            Content="История реализации"
                            HorizontalAlignment="Right"
                            Width="200"
                            BorderThickness="0"
                            Background="#67BA80"
                            Foreground="#fff"
                            FontSize="16" 
                            Click="SaleHistoryButton_Click"
                    />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button
            x:Name="AddButton"
            Grid.Row="2"
            Content="Добавить партнера"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Height="40"
            Width="160"
            BorderThickness="0"
            Background="#67BA80"
            Foreground="#fff"
            FontSize="16" Click="AddButton_Click" 
        />
    </Grid>
</Page>
