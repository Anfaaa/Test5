<Page x:Class="TransportCompany1.PageAddPartner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TransportCompany1"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="1200"
      Background="#fff"
      Title="PageAddPartner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button
                x:Name="BackButton"
                Grid.Row="2"
                Content="Назад"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="35"
                Width="100"
                BorderThickness="0"
                Background="#67BA80"
                Foreground="#fff"
                FontSize="16"
                Margin="20,0,0,0" Click="BackButton_Click" 
            />
            <TextBlock FontSize="32"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Добавление партнера"
            />
        </Grid>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBlock Text="Наименование: " 
                       VerticalAlignment="Center"
                       Width="150" 
                       FontSize="16" 
                       Margin="10,0,0,0"
            />
            <TextBox x:Name="NameInput"
                     VerticalAlignment="Center"
                     Width="300"
                     Height="auto"
                     FontSize="16"
            />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2">
            <TextBlock Text="Тип: " 
                       VerticalAlignment="Center"
                       Width="150" 
                       FontSize="16" 
                       Margin="10,0,0,0"
            />
            <ComboBox x:Name="TypeComboBox"
                     VerticalAlignment="Center"
                     Width="150"
                     Height="auto"
                     FontSize="16"
                     DisplayMemberPath="Name"
                     SelectedValuePath="Id"
            />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <TextBlock Text="ФИО директора: " 
                       VerticalAlignment="Center"
                       Width="150" 
                       FontSize="16" 
                       Margin="10,0,0,0"
            />
            <TextBox x:Name="DirectorInput"
                     VerticalAlignment="Center"
                     Width="300"
                     Height="auto"
                     FontSize="16"
            />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="4">
            <TextBlock Text="Email: " 
                       VerticalAlignment="Center"
                       Width="150" 
                       FontSize="16" 
                       Margin="10,0,0,0"
            />
            <TextBox x:Name="EmailInput"
                     VerticalAlignment="Center"
                     Width="300"
                     Height="auto"
                     FontSize="16"
            />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="5">
            <TextBlock Text="Номер телефона: " 
                       VerticalAlignment="Center"
                       Width="150" 
                       FontSize="16" 
                       Margin="10,0,0,0"
            />
            <TextBox x:Name="PhoneInput"
                     VerticalAlignment="Center"
                     Width="300"
                     Height="auto"
                     FontSize="16"
            />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="6">
            <TextBlock Text="Адрес: " 
                       VerticalAlignment="Center"
                       Width="150" 
                       FontSize="16" 
                       Margin="10,0,0,0"
            />
            <TextBox x:Name="AddressInput"
                     VerticalAlignment="Center"
                     Width="300"
                     Height="auto"
                     FontSize="16"
            />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="7">
            <TextBlock Text="Рейтинг: " 
                       VerticalAlignment="Center"
                       Width="150" 
                       FontSize="16" 
                       Margin="10,0,0,0"
            />
            <TextBox x:Name="RatingInput"
                     VerticalAlignment="Center"
                     Width="300"
                     Height="auto"
                     FontSize="16"
            />
        </StackPanel>
        <Button
                x:Name="AddButton"
                Grid.Row="8"
                Content="Добавить"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Height="40"
                Width="120"
                BorderThickness="0"
                Background="#67BA80"
                Foreground="#fff"
                FontSize="16" Click="AddButton_Click" 
            />
    </Grid>
</Page>
