<Page x:Class="TransportCompany1.PageRequestProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TransportCompany1"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="1200"
      Background="#fff"
      Title="PageRequestProducts">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button
                x:Name="BackButton"
                Grid.Row="2"
                Content="Назад"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Height="35"
                Width="100"
                BorderThickness="0"
                Background="#67BA80"
                Foreground="#fff"
                FontSize="16"
                Margin="20,0,0,0" Click="BackButton_Click" 
            />
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="36"
                Text="Список продукции в заявке" 
                
            />
        </Grid>
        <ListView x:Name="PartnerProductsListView"
                  BorderThickness="0"
                  HorizontalContentAlignment="Stretch"
                  Grid.Row="1"
        >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel 
                        Background="#F4E8D3"
                        Height="auto"
                        Width="auto"
                        Orientation="Vertical"
                    >
                        <TextBlock FontSize="16" 
                                   Margin="3"
                                   HorizontalAlignment="Left"
                        >
                            <Run Text="{Binding Product.Name}"/>
                        </TextBlock>
                        <TextBlock FontSize="14"
                                   Margin="3"
                                   HorizontalAlignment="Left"
                        >
                            <Run Text="Количество: "/>
                            <Run Text="{Binding Amount}"/>
                        </TextBlock>
                        <TextBlock FontSize="14"
                                   Margin="3"
                                   HorizontalAlignment="Left"
                        >
                            <Run Text="Минимальная цена:"/>
                            <Run Text="{Binding Product.MinPrice}"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
